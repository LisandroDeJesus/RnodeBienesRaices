extends ../layout/index

block contenido
      div.py-10
            h1.text-4xl.my-10.font-extrabold.text-center Bienes
                  span.font-normal Raices
            h2.text-center.text-4xl= pagina 



      if errores
            div(class="max-w-md mx-auto my-10 ")
                  each error in errores 
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

      .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow 
                  form.space-y-5(method="POST" action="/out/registro" noValidate)
                        input(type="hidden" name="_csrf" value=csrfToken)

                        div 
                              label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for = 'nombre')  Tu Nombre
                              input#nombre.w-full.px-4.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=
                              "tu nombre" type="text"  name="nombre" value= usuario ?  usuario.nombre : '')
                        div 
                              label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for = 'email') Correo
                              input#email.w-full.px-4.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=
                              "example@email.com" type="email" name= "email" value= usuario ?  usuario.email : '')

                        div 
                              label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for ='password') Password
                              input#password.w-full.px-4.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=
                              "password" type="password" name= "password" autocomplete="off")
                        
                        div 
                              label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for ='password') Repetir Password
                              input#repitaClave.w-full.px-4.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=
                              "password" type="password" name="repitaClave" autocomplete="off")

                        div.flex.items-center.justify-between 
                              a.text-gray-500.text-sm(href="login") ¿Ya tienes Cuenta? Inicia sesion 
                              a.text-gray-500.text-sm(href="recuperacion") Olvide su Contraeña  

                        
                        input( class=" font-sans   text-white w-full bg-indigo-600 hover:bg-indigo-700 cursor-pointer font-bold  py-3  "
                              type="submit" value="Crear cuenta")

