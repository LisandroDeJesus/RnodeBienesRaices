extends ../layout/index

block contenido
      div.py-10
            h1.text-4xl.my-10.font-extrabold.text-center Bienes
                  span.font-normal Raices
            h2.text-center.text-4xl= pagina 

            if errores
                  div(class="max-w-md mx-auto my-10 ")
                        each error in errores 
                              p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


            div(class = "mt-8 mx-auto max-w-md ")
                  .bg-white.py-8.px-4.shadow
                        form.space-y-5(method='POST' action="/out/recuperacion" noValidate)
                              input(type="hidden" name="_csrf" value= csrfToken)
                              div.space-y-2 
                                    label.block.text-sm.capitalize.text-gray-500.font-bold(for="email") Email de Registro 
                                    input#email.w-full.px-4.py-2.mx-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="tu email" type="email" name="email")

                              div.flex.items-center.justify-between
                                    a.text-gray-500.text-xs(href="/out/registro") No tienes Cuenta? Registrate
                                    a.text-gray-500.text-xs(href=".out.login") Ya Tienes Cuenta?Inicia Sesion 

                              input(class = "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer"
                              type="submit" value="Enviar Instrucciones" )                                    
          

            