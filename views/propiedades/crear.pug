extends ../layout/index
block styles 
     link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
block contenido
    div.py-10
            h1.text-4xl.my-10.font-extrabold.text-center Bienes
                  span.font-normal Raices
            h2.text-center.text-4xl= pagina 

            if errores
                div(class="max-w-md mx-auto my-10 ")
                    each error in errores 
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

            div(class="bg-white  shadow py-8 px-4 rounded mx-auto max-w-4xl my-15 md:px-10")
                from.space-y-8(method="POST" action="/propiedades/crear" noValidate)
                    input(type="hidden" name="_csrf"  value=csrfToken )
                    div.space-y-5
                        h3.text-lg.leanding-6-font-medium.text-gray Informacion General 
                        p.text-gray-600 Añade Informacion de la Propiedad en Venta 

                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="titulo") Titulo Anuncio
                            input#titulo.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder ="titulo" type="text" name=" titulo ")


                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="Descripcion") Descripcion del Anuncio
                            textarea#Descripcion.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder ="Ej:  casa en la orilla del rio con hermosos atardeceres y tierra fertiles" type="text" name="Descripcion")

                        div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                            div(class="md:w-1/2")
                                label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="categoria")  Categoria
                                select#categoria.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")
                                    option(value="") - Seleccione -  
                                    each  categoria in  categorias 
                                        option(value=categoria.id)= categoria.nombre 
                            
                            div(class="md:w-1/2")
                                label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="precio")  Precio
                                select#precio.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")
                                    option(value="") - Seleccione -  
                                     each  precio in  precios 
                                        option(value=precio.id)= precio.nombre 
                            
                        div(class="md:flex md:gap-4 space-y-5 md:space-y-0")   

                            div(class="md:w-1/3")
                                label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="habitaciones")  Habitaciones
                                select#habitaciones.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="Habitaciones")
                                    option(value="") - Seleccione - 
                                    - let n = 1 
                                    while n < 10
                                        option(value=n) #{n++}
                            
                            div(class="md:w-1/3")
                                label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="wc")  Baños
                                select#wc.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="Baños")
                                    option(value="") - Seleccione - 
                                    - let y = 1 
                                    while y < 5
                                        option(value=y) #{y++}
                                        
                                       


                            div(class="md:w-1/3")
                                label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="estacionamientos")   Estacionamientos 
                                select#estacionamientos.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="Estacionamientos")
                                    option(value="") - Seleccione - 
                                     - let w = 1 
                                    while w < 5
                                        option(value=w) #{w++}

                        div.border-gray-200.border-t.py-5
                            h3.text-lg.leading-6.font-medium.text-gray-900 Informacion General 
                            p.text-gray-600 Añade Ubicacion de la Propiedad en Venta 
                            #mapa.h-96 

                            div 
                                p.calle 
                            
                            input(type="hidden" name="calle" id="calle")
                            input(type="hidden" name="lat" id="lat")
                            input(type="hidden" name="lng" id="lng")

                        input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer"  type="submit"  value="Añadir Imagen")
    block scripts
        script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
        script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
        script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
        script(src="/js/mapa.js")
                                            
                                       



            
                    