extends ../layout/admin
 
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-4xl= pagina
        a(href="/propiedades/crear"
          class="rounded py-2 bg-indigo-500 px-10 hover:bg-indigo-700 text-sm font-bold text-center text-white my-5 inline-block w-full sm:w-auto")
          Publicar Propiedad
        
        if propiedades.length
            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each propiedad in propiedades
                        li
                            div(class="p-6 w-full flex flex-col  sm:flex-row sm:items-center sm:justify between p-y-8 gap-4") 
                                div(class="sm:w-1/4 md:w-1/6")
                                    img(src=`/uploads/${propiedad.imagen}` alt=`Imagen Propiedad ${propiedad.titulo}`)

                                div(class="sm:w-2/4 md:w-3/6  lg:w-4/6") 2
                                div(class="sm:w-1/4 md:w-2/6   lg:w-1/6") 3
                                    
                                    
        else
            p.text-center No Hay Propiedades



        block scripts



            